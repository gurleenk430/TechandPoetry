<script language="JavaScript">
function setVisibility(id) {
if(document.getElement('bt1').value=='Hide Layer'){
document.getElement('bt1').value = 'Show Layer';
document.getElement(id).style.display = 'none';
}else{
document.getElement('bt1').value = 'Hide Layer';
document.getElement(id).style.display = 'inline';
}
}

</script>
</head>
<body>

<input type=button name=type id='bt1' value='Show Layer' onclick="setVisibility('sub3');";> 

<div id="sub3">Message Box</div>
